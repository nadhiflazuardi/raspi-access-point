#!/bin/bash

CONFIG_FILE="/etc/raspi-ap/config.conf"

if [ -f "$CONFIG_FILE" ]; then
    source "$CONFIG_FILE"
else
    echo "[ERR] Config file not found: $CONFIG_FILE"
    exit 1
fi

# Dynamically detect Ethernet interface (eth0, end0, enx..., etc.)
get_eth_interface() {
    ip -o link show | awk -F': ' '{print $2}' | grep -E '^en[a-z0-9]*$' | head -n1
}

ETH_IFACE=$(get_eth_interface)

if [ -z "$ETH_IFACE" ]; then
    echo "[ERR] Could not detect Ethernet interface (eth0/end0/enx...)"
    exit 1
fi

echo "[1] Setting static IP for $WLAN_IFACE"
cat <<EOF >> /etc/dhcpcd.conf

interface $WLAN_IFACE
static ip_address=$STATIC_IP/24
nohook wpa_supplicant
EOF

echo "[2] Restarting dhcpcd service..."
systemctl restart dhcpcd
sleep 5

echo "[3] Setting up hostapd config..."
cat <<EOF > /etc/hostapd/hostapd.conf
interface=$WLAN_IFACE
driver=nl80211
ssid=$SSID
hw_mode=g
channel=7
wmm_enabled=0
macaddr_acl=0
auth_algs=1
ignore_broadcast_ssid=0
wpa=2
wpa_passphrase=$PASSPHRASE
wpa_key_mgmt=WPA-PSK
rsn_pairwise=CCMP
EOF

echo "DAEMON_CONF=\"/etc/hostapd/hostapd.conf\"" > /etc/default/hostapd

echo "[4] Setting up dnsmasq config..."
mv /etc/dnsmasq.conf /etc/dnsmasq.conf.orig
cat <<EOF > /etc/dnsmasq.conf
interface=$WLAN_IFACE
dhcp-range=192.168.4.2,192.168.4.20,255.255.255.0,24h
EOF

echo "[5] Enabling IPv4 forwarding..."
sed -i 's/#net.ipv4.ip_forward=1/net.ipv4.ip_forward=1/' /etc/sysctl.conf
sysctl -p

echo "[6] Setting up NAT using iptables on $ETH_IFACE..."
iptables -t nat -A POSTROUTING -o "$ETH_IFACE" -j MASQUERADE
sh -c "iptables-save > /etc/iptables/rules.v4"

echo "[7] Restarting services..."
systemctl unmask hostapd
systemctl enable hostapd
systemctl restart hostapd
systemctl restart dnsmasq

echo "[âœ”] Access point should be up and running!"
