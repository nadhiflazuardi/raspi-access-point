#!/bin/bash

echo "ğŸ” Checking status of network-watcher.service..."
echo "-----------------------------------------------"
systemctl status network-watcher --no-pager

echo ""
echo "ğŸ“„ Last 15 lines from /var/log/netlink.log:"
echo "-----------------------------------------------"
if [ -f /var/log/netlink.log ]; then
    tail -n 15 /var/log/netlink.log
else
    echo "Log file not found!"
fi
