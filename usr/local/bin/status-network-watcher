#!/bin/bash

echo "üîç Checking status of network-watcher.service..."
echo "-----------------------------------------------"
systemctl status network-watcher --no-pager

echo ""
echo "Last 15 logs related to access point:"
echo "-----------------------------------------------"
if [ -f /var/log/netlink.log ]; then
    grep "access point" /var/log/netlink.log | tail -n 15
else
    echo "Log file not found!"
fi
